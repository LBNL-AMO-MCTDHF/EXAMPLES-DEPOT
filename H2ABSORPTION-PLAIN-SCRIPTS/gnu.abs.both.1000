#!/bin/bash

echo '

set title "Photoabsorption cross section H2 fixed nuclei 7 orbitals"

set xlabel "Energy (eV)"
set ylabel "emission/absorption\ncross section (Mb)"

set term unknown
set style data lines

set key top right

set xrange [10:40]
set yrange [0:20]

set ytics 2

plot "Dat/ZDipoleft.Dat001000" using (27.2114*$1):($9) lt 7 lw 10 title "Par"

replot "Dat/XDipoleft.Dat.perp001000" using (27.2114*$1):($9) lt 3 lw 7 title "Perp"


set term x11
replot

set out "Absorption.h2.both.eps"
set term post enhanced eps solid color 28
replot

' | gnuplot -persist


