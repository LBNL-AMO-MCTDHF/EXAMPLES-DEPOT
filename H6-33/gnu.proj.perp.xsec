#!/bin/bash

echo '

set title "Partial photoionization H6-33 perp calculation"

set term unknown
set xlabel "Photon Energy (ev)"
set ylabel "Cross Section (MBarns)"
set yrange [-5:50]
set xrange [0:40]


A=27.2114

plot "Dat/xsec.spi.perp.dat" using (A*$1):($3) with lines lt -1 lw 4 title "tot"

replot  "Dat/xsec.proj.spi.perp_001_001.dat" using (A*$1):($3) with points pt 7 ps 2 lt 1 lw 3 title "E"
replot  "Dat/xsec.proj.spi.perp_002_001.dat" using (A*$1):($3) with points pt 7 lt 2 lw 3 title "E"
replot  "Dat/xsec.proj.spi.perp_003_001.dat" using (A*$1):($3) with points pt 7 lt 3 lw 3 title "A"

replot  "Dat/xsec.proj.spi.perp_all_001.dat" using (A*$1):($3) with lines lt 8 lw 3 title "SUM"

set term post enhanced 20 color solid
set out "proj.xsec.h6-33.perp.ps"
replot

set term x11
set out
replot

exit' | gnuplot -persist 

