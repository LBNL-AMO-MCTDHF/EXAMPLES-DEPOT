#!/bin/bash

echo '

set term unknown
set xlabel "Photon Energy (eV)"
set ylabel "Cross Section (MBarns)"
set yrange [-5:40]
set xrange [0:60]

A=27.2114

plot  "Dat/xsec.spi.perp.dat" using (A*$1):($3) with lines lt -1 lw 3 title "legth"
replot  "Dat/xsec.spi.perp.vel.dat" using (A*$1):($3) with lines lt 7 lw 2 title "velocity"

set term post enhanced 20 color solid
set out "full.xsec.perp.ps"
replot

set term x11
set out
replot

' | gnuplot -persist

